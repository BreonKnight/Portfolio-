<div class="container blogs">
  <div class="row card white hero">
    <h4 class=" center-align card blue white-text z-depth-2 ">Edit Blog Post</h4>
  </div>
  <div class="row white">
      <div class="col s12">
        <%= form_for @blog, url: patch_path, method: "patch"  do |f| %>
        <div class="input-field col s6">
          <%= f.label(:title, "Title") %>
          <br>
          <%= f.text_field :title %>
        </div>
        <div class="input-field col s6">
          <%= f.label(:body, "Body") %>
          <br>
          <%= f.text_area :body %>
        </div>
      </div>
      <%= f.submit "Save", class: "btn blue" %>
      <% end %>
  </div>
</div>
