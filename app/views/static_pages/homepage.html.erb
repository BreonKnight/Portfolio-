<div class="container">
  <div class="section">
    <h3 class="header col s12 light">Recent Posts</h3>
    <div class="row">
          <% last_five_posts.each do |post| %>
          <%= link_to blog_path(blog_entry(post)).gsub!(/[."]/,'/') do %>
          <div class="col s6">
            <h5 class="card blue white-text"><%= post.title %> <br><small class="white-text"><%= truncate(post.body, :length => 50) -%></small></h5>
            <% end %>
          </div>
          <% end %>
      </div>
    </div>
</div>

